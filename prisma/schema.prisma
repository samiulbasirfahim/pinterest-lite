generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id             String           @id @default(cuid())
    name           String
    emial          String           @unique
    avatar         String
    UserCredential UserCredential[]
}

model UserCredential {
    id       String @id @default(cuid())
    user     User   @relation(fields: [userId], references: [id])
    userId   String
    password String
}
